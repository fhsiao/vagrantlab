#!/usr/bin/env bash
set -e
MACHINE_IP="192.168.98.100"
MACHINE_NAME="kafka"
SSH_USER="vagrant"
SSH_PUBLIC_KEY=".vagrant/machines/default/virtualbox/private_key"
# If you did an ssh-copy-id to the machine: ~/.ssh/id_rsa
docker-machine create --driver generic \
--generic-ip-address=${MACHINE_IP} \
--generic-ssh-key ${SSH_PUBLIC_KEY} \
--generic-ssh-user ${SSH_USER} \
${MACHINE_NAME}
